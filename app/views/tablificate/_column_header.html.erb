<th>
  <%= column.header %>
  <% if column.sortable? %>
    <%= link_to 'A', url_for(params.merge(sort: column.label.to_s, dir: 'asc')) %>
    <% if column.is_sorted?('asc') %>
      *
    <% end %>
    <%= link_to 'D', url_for(params.merge(sort: column.label.to_s, dir: 'desc')) %>
    <% if column.is_sorted?('desc') %>
      *
    <% end %>
  <% end %>
</th>
