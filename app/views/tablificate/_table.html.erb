<table>
  <thead>
    <tr>
      <% columns.each do |column| %>
        <th><%= column.to_s.titleize %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% rows.each do |row| %>
      <tr>
        <% columns.each do |column| %>
          <td><%= row.send(column) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
