<% if table.filters.any? %>
  <%= form_tag('', method: :get, novalidate: 'novalidate') do %>
    <%= tableficate_hidden_tags(table.hidden_filters) %>

    <% table.visible_filters.each do |filter| %>
      <%= tableficate_filter_tag(filter) %>
    <% end %>

    <%= submit_tag('Filter') %>
  <% end %>
<% end %>
